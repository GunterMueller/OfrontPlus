#!/bin/bash
export OBERON=.:../Sym64

mod=$2
if [ "$2" == "Files.Unix" ]; then mod="Files"; fi
if [ "$2" == "Kernel.Unix" ]; then mod="Kernel"; fi
if [ "$2" == "Modules.Unix" ]; then mod="Modules"; fi

gcc -c $mod.c -s -Os -fno-exceptions -fno-asynchronous-unwind-tables
errCode=$?
if [ $errCode != 0 ]; then echo "ERROR #"$errCode; exit 1; fi

ar -rc $1 $mod.o
rm $mod.o
