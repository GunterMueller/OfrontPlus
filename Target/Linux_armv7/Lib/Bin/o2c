#!/bin/sh
cd ../Obj
export PATH="$PATH:../.."
export OBERON=.:../Sym:../../../../Mod/Lib

## Ofront+

ofront+ -sC -48 Heap.Mod -apx Platform.Unix.Mod -atpx Console.Mod Kernel.Mod -atpx Args.Mod Reals.Mod Strings.Mod Files.Mod Modules.Mod Texts.Mod Oberon.Mod
if [ $? != 0 ]; then exit 1; fi

## Eco

ofront+ -sC -48 ecoBigSets.Mod ecoBuffer.Mod ecoListen.Mod ecoLists.Mod ecoParser.Mod ecoVector.Mod
if [ $? != 0 ]; then exit 1; fi

## ETH Oberon

ofront+ -s2 -48 Zlib.Mod ZlibBuffers.Mod ZlibDeflate.Mod ZlibInflate.Mod ZlibReaders.Mod ZlibWriters.Mod Zip.Mod
if [ $? != 0 ]; then exit 1; fi

## OOC2

ofront+ -sC -48 ooc2Ascii.Mod ooc2ConvTypes.Mod ooc2RandomNumbers.Mod ooc2Strings.Mod
if [ $? != 0 ]; then exit 1; fi

## POW

ofront+ -sC -48 powStrings.Mod
if [ $? != 0 ]; then exit 1; fi

## Free Oberon

ofront+ -sC -48 SDL2.Mod SDL2mixer.Mod SQLite.Mod Out.Mod In.Mod Graph.Mod Math.Mod MathL.Mod Sound.Mod Turtle.Mod
if [ $? != 0 ]; then exit 1; fi

## libCurl

ofront+ -sC -48 libCurl.Mod NetHttp.Mod
if [ $? != 0 ]; then exit 1; fi

find . -type f -name "*.sym" -exec mv -f {} ../Sym \;
